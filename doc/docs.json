{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Hux UI",
  "icons": {
    "library": "lucide"
  },
  "colors": {
    "primary": "#333333",
    "light": "#ffffff",
    "dark": "#333333"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "installation",
              "quickstart",
              "theming"
            ]
          },
          {
            "group": "Components",
            "pages": [
              "components/alert",
              "components/avatar",
              "components/badge",
              "components/breadcrumbs",
              "components/buttons",
              "components/cards",
              "components/charts",
              "components/checkbox",
              "components/command",
              "components/context-menu",
              "components/date-picker",
              "components/dialog",
              "components/dropdown",
              "components/input",
              "components/textarea",
              "components/loading",
              "components/pagination",
              "components/progress",
              "components/radio",
              "components/sidebar",
              "components/slider",
              "components/snackbar",
              "components/switch",
              "components/tabs",
              "components/toggle",
              "components/tooltip"
            ]
          },
          {
            "group": "Advanced",
            "pages": [
              "advanced/theming",
              "advanced/customization",
              "advanced/wcag",
              "advanced/accessibility"
            ]
          }
        ]
      },
      {
        "tab": "Examples",
        "groups": [
          {
            "group": "Usage Examples",
            "pages": [
              "examples/basic-usage",
              "examples/form-building",
              "examples/data-visualization",
              "examples/theme-switching"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Package",
          "href": "https://pub.dev/packages/hux",
          "icon": "box"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/lofidesigner/hux",
          "icon": "github"
        },
        {
          "anchor": "Figma Library",
          "href": "https://www.figma.com/community/file/1541197128732135637/the-hux-ui",
          "icon": "figma"
        },
        {
          "anchor": "Sponsor",
          "href": "https://github.com/sponsors/lofidesigner",
          "icon": "heart"
        },
        {
          "anchor": "Issues",
          "href": "https://github.com/lofidesigner/hux/issues",
          "icon": "bug"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "pub.dev",
        "href": "https://pub.dev/packages/hux"
      }
    ],
    "primary": {
      "type": "github",
      "href": "https://github.com/lofidesigner/hux"
      
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/lofidesigner/hux"
    },
    "links": [
      {
        "group": "Support",
        "items": [
          {
            "label": "GitHub Sponsors",
            "href": "https://github.com/sponsors/lofidesigner"
          }
        ]
      }
    ]
  },
  "css": [
    ".global-anchors a { color: #ffffff !important; }",
    ".global-anchors a:hover { color: #e5e5e5 !important; }",
    ".global-anchors a[href*='github'] { color: #ffffff !important; }",
    ".global-anchors a[href*='github']:hover { color: #e5e5e5 !important; }",
    ".global-anchors img { display: block !important; }",
    ".global-anchors svg { display: block !important; }",
    ".global-anchors .global-anchor-icon { display: block !important; }",
    ".global-anchors .global-anchor-icon svg { display: block !important; }",
    ".global-anchors .global-anchor-icon img { display: block !important; }"
  ]
}
